@model IEnumerable<GroupAllViewModel>

@{
    ViewData["Title"] = "My Groups";
}

<div class="text-center mt-4 mb-4">
    <h1>My groups</h1>
    <hr></hr>
</div>

@if (!Model.Any())
{
    <h2 class="text-center mt-5">
        You have no created groups yet!
    </h2>
}



<div class="mt-4">
    @foreach (var group in Model)
    {
        <partial name="~/Views/Group/_GroupFormPartial.cshtml" model="@group" />
    }
</div>


@model GroupFormModel

@{
    ViewBag.Title = "Create Group";
}

<style>
    .info {
        background-color: #99ddff;
        border-radius: 0.4em;
    }
</style>

<h2 class="text-center mt-3">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 mb-5">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Title...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Create" />
            </div>
        </form>
    </div>
    <hr class="mt-5"></hr>
    <div class="text-center info mt-2">
        <h3>In groups only the group members can see the content there!</h3>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model IEnumerable<PostCommentServiceModel>
@inject IPostService postService

@{
    string title = "";
    foreach (var item in @Model)
    {
        title = item.PostTitle;
    }
}


<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title fs-5" id="exampleModalLabel">@title</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                @if (@Model.Count() == 0)
                {
                    <h4>No comments for this post!</h4>
                }
                else
                {
                    @foreach (var comment in @Model)
                    {
                        <div class="p-2 mb-2 com">
                            <h5>@comment.UserFullName</h5>
                            <hr></hr>
                            <p class="descrComment">@comment.Description</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>


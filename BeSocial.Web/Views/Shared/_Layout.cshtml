<!DOCTYPE html>
<html lang="en">


<head>
    <style>
        /* Add the updated CSS styles here */
        .backg {
            /* background-color: dimgray; */
            /* background-image: url(); */
        }

    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeSocial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeSocial.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column">
    
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BeSocial</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Post" asp-action="All">All Posts</a>
                        </li>
                    </ul>
                    
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    @if (ViewData["Title"] == "Home Page")
    {
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }
    else if (ViewData["Title"] == "All Posts")
    {
        <div class="container w-50">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }
    



    <footer class="border-top footer bg-dark">
        <div class="container text-white">
            &copy; @DateTime.Now.Year - BeSocial
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
